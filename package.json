{
  "name": "zeal8bit",
  "displayName": "Zeal 8-bit Emulator Preview",
  "description": "Preview Zeal 8-bit binaries in an emulator panel",
  "version": "0.1.5",
  "publisher": "zoul0813",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other",
    "Debuggers"
  ],
  "keywords": [
    "zeal8bit",
    "z80",
    "emulator",
    "assembly"
  ],
  "activationEvents": [
    "workspaceContains:**/.zealrc",
    "onTaskType:shell"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "zeal8bit.project.create",
        "title": "Create Zeal 8-bit Project",
        "category": "Zeal 8-bit",
        "icon": "$(device-desktop)"
      },
      {
        "command": "zeal8bit.preview.open",
        "title": "Open Zeal 8-bit Preview",
        "category": "Zeal 8-bit",
        "icon": "$(device-desktop)"
      },
      {
        "command": "zeal8bit.preview.load",
        "title": "Load Binary in Zeal 8-bit Preview",
        "category": "Zeal 8-bit",
        "icon": "$(play)"
      },
      {
        "command": "zeal8bit.zde.cmake",
        "title": "Run CMake in ZDE",
        "category": "Zeal 8-bit",
        "icon": "$(wrench)"
      },
      {
        "command": "zeal8bit.zde.make",
        "title": "Run Make in ZDE",
        "category": "Zeal 8-bit",
        "icon": "$(wrench)"
      },
      {
        "command": "zeal8bit.kernel.compile",
        "title": "Compile Zeal Kernel",
        "category": "Zeal 8-bit",
        "icon": "$(wrench)"
      },
      {
        "command": "zeal8bit.hardware.xfer",
        "title": "Xfer to Hardware",
        "category": "Zeal 8-bit",
        "icon": "$(play)"
      },
      {
        "command": "zeal8bit.emulator.run",
        "title": "Run Zeal Native Emulator",
        "category": "Zeal 8-bit",
        "icon": "$(wrench)"
      },
      {
        "command": "zeal8bit.reload",
        "title": "Reload Zeal 8-bit Extension",
        "category": "Zeal 8-bit",
        "icon": "$(wrench)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "zeal8bit-sidebar",
          "title": "Zeal 8-bit",
          "icon": "logo.svg"
        }
      ]
    },
    "views": {
      "zeal8bit-sidebar": [
        {
          "id": "zeal8bit-menu",
          "name": "Overview",
          "icon": "logo.svg"
        },
        {
          "id": "zeal8bit-secondView",
          "name": "Details",
          "when": "zeal8bit.showDetails",
          "icon": "logo.svg"
        }
      ]
    },
    "menus": {
      "explorer/context": [
        {
          "command": "zeal8bit.preview.load",
          "when": "resourceExtname == .bin",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "zeal8bit.preview.open"
        },
        {
          "command": "zeal8bit.preview.load",
          "when": "false"
        }
      ]
    },
    "configuration": {
      "title": "Zeal 8-bit",
      "properties": {
        "zeal8bit.uses": {
          "type": "string",
          "default": "",
          "description": "Whether the Preview Emulator loads Zeal OS or runs your program as Bare Metal.",
          "scope": "window"
        },
        "zeal8bit.projectRoot": {
          "type": "string",
          "default": "",
          "description": "Default location of your Zeal 8-bit Projects, defaults to ~/Documents.",
          "scope": "machine"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "version": "npm run compile",
    "postversion": "git push && git push --tags",
    "release:patch": "npm version patch",
    "release:minor": "npm version minor",
    "release:major": "npm version major",
    "release:prerelease": "npm version prerelease"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "typescript": "^4.9.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Zeal8bit/Zeal-Playground-VSCode.git"
  },
  "license": "MIT",
  "dependencies": {
    "strip-ansi": "^7.1.0"
  }
}
